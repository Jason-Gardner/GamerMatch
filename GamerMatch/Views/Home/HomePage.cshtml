
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AspNetUsers

<h1>HomePage</h1>

<style>
    #leftbox {
        float: left;
        display: inline-block;
        box-sizing: border-box;
        width: 25%;
        height: 80%;
        padding: 10px
    }

    #middlebox {
        float: left;
        display: inline-block;
        box-sizing: border-box;
        width: 50%;
        height: 80%;
        padding: 10px;
    }

    #rightbox {
        float: right;
        display: inline-block;
        box-sizing: border-box;
        width: 25%;
        height: 80%;
        padding: 10px
    }
</style>


<form id="myformOne" asp-controller="Home" asp-action="Results" onsubmit="return ValidationEvent()">
    <div id="leftbox">
        <div class="container bg-primary">
            <fieldset>
                <legend>Search Options</legend>               
                    <div class="form-group">
                        <label for="userName">User Name</label>
                        <input class="form-control" type="Text" name="userName" pattern="[A-Za-z0-9]+" />
                    </div>
                    <div class="form-group">
                        @*<label for="gameSearch">Game Name</label>
        <input class="form-control" type="Text" name="gameSearch" pattern="[A-Za-z0-9]+" />*@
                        <select name="Games">
                            @foreach (var item in ViewData["MyGames"] as List<string>)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="Boardgames">
                          
                            @foreach (var item in ViewData["Games"] as List<BoardGames>)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }

                        </select>
                    </div>
                    <div class="form-group">
                        <fieldset>
                            <legend>Type Of Play</legend>

                            <select name="difficult">
                                <option value="casual">Casual Play</option>
                                <option value="competitive">Competitive Play</option>
                                <option value="win">Play to Win</option>
                            </select>

                        </fieldset>
                    </div>
                
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit" />
                </div>
            </fieldset>
        </div>
        
    </div>
</form>


<div id="middlebox">
    <div class="list-group bg-success">
        
        <h4>Matches</h4>
        
            @foreach (var user in ViewData["Users"] as List<AspNetUsers>)
             {
                <h3>@user.UserName</h3>
             }

        
    </div>

</div>


<div id="rightbox">
    <div class="container bg-primary">
        <h4>@User.Identity.Name</h4>
        <p>
            Friends List

            1.
            2.
            3.
            4.
            5.
        </p>
    </div>

</div>

