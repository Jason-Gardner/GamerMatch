
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AspNetUsers



<style>
    #leftbox {
        float: left;
        display: flex;
        box-sizing: padding-box;
        width: auto;
        height: auto;
        padding: 10px
    }

    #rightbox {
        float: right;
        display: flex;
        box-sizing: padding-box;
        width: auto;
        height: auto;
        padding: 10px
    }
</style>

<div class="display-1">
    <div class="text-center">
        <p>Search</p>
    </div>

</div>
<form id="myformOne" asp-controller="Home" asp-action="Results" onsubmit="return ValidationEvent()">
    <div id="leftbox">
        <div class="col-8">

            <fieldset>
                <legend>Search Options</legend>
                <div class="form-group">
                    <label for="userName">User Name</label>
                    <input class="form-control" type="Text" name="userName" pattern="[A-Za-z0-9]+" />
                </div>
                @if (ViewData["MyGames"] != null)
                {
                    <div class="form-group">
                        <label for="game">Steam Game Title</label>
                        <select name="steamTitle">
                            <option value=null></option>
                            @foreach (var item in ViewData["MyGames"] as List<string>)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                }
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit" />
                </div>
                <div class="form-group">
                    <label for="boardgame">Board Game Title</label>
                    <select name="boardTitle">
                        <option value=null></option>
                        @foreach (var item in ViewData["Games"] as List<BoardGames>)
                        {
                            <option value="@item.Title">@item.Title</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit" />
                </div>
                <div class="form-group">
                    <fieldset>
                        <legend>Type Of Play</legend>

                        <select name="difficult">
                            <option value=""></option>
                            <option value="casual">Casual Play</option>
                            <option value="competitive">Competitive Play</option>
                            <option value="win">Play to Win</option>
                        </select>

                    </fieldset>
                </div>

            </fieldset>
        </div>
    </div>
</form>



<div id="rightbox">

    <div class="col-4">

        <h4>@User.Identity.Name</h4>
        <div class="list-group-flush">
            <fieldset>
                <legend>Friends List</legend>
                <table>
                    @foreach (var item in ViewData["Friends"] as List<UserMatch>)
                    {
                        if (item.UserSend == Model.Id)
                        {
                            <tr><td>@item.UserGet</td></tr>
                        }
                    }
                </table>

            </fieldset>

        </div>
    </div>


</div>

