
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>HomePage</h1>

@model AspNetUsers

<style>
    #leftbox {
        float: left;
        display: inline-block;
        box-sizing: border-box;
        width: 25%;
        height: 80%;
        padding: 10px
    }

    #middlebox {
        float: left;
        display: inline-block;
        box-sizing: border-box;
        width: 50%;
        height: 80%;
        padding: 10px;
    }

    #rightbox {
        float: right;
        display: inline-block;
        box-sizing: border-box;
        width: 25%;
        height: 80%;
        padding: 10px
    }
</style>


<form id="myformOne" asp-controller="Home" asp-action="Results" onsubmit="return ValidationEvent()">
    <div id="leftbox">
        <div class="container bg-primary">
            <h4>Search Options</h4>

            <p>
                <div class="form-group">
                    <label for="userName">User Name</label>
                    <input class="form-control" type="Text" name="userName" pattern="[A-Za-z0-9]+" />
                </div>
                <div class="form-group">
                    <label for="gameName">Game Name</label>
                    <input class="form-control" type="Text" name="gameName" pattern="[A-Za-z0-9]+" />
                </div>
                <div class="form-group">
                    <fieldset>
                        <legend>Type Of Play</legend>

                        <label for="casualPlay">Casual Play</label>
                        <input type="checkbox" id="casualPlay" name="typeOfPlay" />

                        <label for="competitivePlay">Competitive Play</label>
                        <input type="checkbox" id="competitivePlay" name="typeOfPlay" />

                        <label for="playTOWin">Play to Win</label>
                        <input type="checkbox" id="playToWin" name="typeOfPlay" />

                    </fieldset>
                </div>
            </p>

            <div class="form-group">
                <input class="form-control btn btn-primary" type="submit" />
            </div>
        </div>
    </div>
</form>


<div id="middlebox">
    <div class="container bg-primary">
        <h4>Matches</h4>
        <p>
            "matches name"
        </p>
    </div>

</div>


<div id="rightbox">
    <div class="container bg-primary">
        <h4>@ViewBag.ID</h4>
        <p>
            Friends List

            1.
            2.
            3.
            4.
            5.
        </p>
    </div>

</div>

